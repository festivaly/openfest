{
  "name": "FestUser",
  "base": "User",
  "properties": {
    "displayName": {
      "type": "string"
    },
    "profile": {
      "type": "string"
    },
    "icon": {
      "type": "string",
      "default": "images/egg-100.png"
    },
    "isNew": {
      "type": "boolean",
      "default": true
    },
    "rememberMe": {
      "type": "boolean",
      "default": true
    }
  },
  "hidden": [],
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "FestAccessToken",
      "foreignKey": "userId"
    },
    "identities": {
      "type": "hasMany",
      "model": "FestUserIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "FestUserCredential",
      "foreignKey": "userId"
    },
    "events": {
      "type": "hasMany",
      "model": "Event",
      "foreignKey": "ownerId"
    },
    "tickets": {
      "type": "hasMany",
      "model": "Ticket",
      "foreignKey": "purchaserId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
